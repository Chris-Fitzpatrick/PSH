<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Post a Listing"
        android:id="@+id/textview1"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionSend"
        android:hint="Enter an address"
        android:id="@+id/searchAddress" />

    <Button
        android:text="CHECK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/button4" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionSend"
        android:hint="Rent (per person/month)"
        android:id="@+id/rent"
        android:visibility="gone"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionSend"
        android:hint="Number of Bedrooms"
        android:id="@+id/beds"
        android:visibility="gone"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionSend"
        android:hint="Lattitude"
        android:id="@+id/lattitude"
        android:visibility="gone"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionSend"
        android:hint="Longitude"
        android:id="@+id/longitude"
        android:visibility="gone"/>

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:id="@+id/button5"
        android:visibility="gone"/>

    <!-- Change margin top to 100 to return to ideal page location -->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map3"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:cameraTargetLat="42.4075"
        map:cameraTargetLng="-71.1190"
        map:cameraZoom="15"
        />


</RelativeLayout>


